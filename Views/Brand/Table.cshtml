@{
    Layout = "_AdminLayout";
}

@model List<HairCareStore.Models.Brand>

<section class="Brandlist List">
    <div class="blank"></div>
    <a href="@Url.Action("Create","Brand")" type="button" class="btn btn-primary"> + Add new Brand</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Logo</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Function</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.BrandId</th>
                    <td>
                        <img src="@Url.Content("~/img/Brands/"+@item.Logo)">
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>

                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                            <a href="@Url.Action("Edit","Brand",new {id= item.BrandId})" type="button" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete","Brand",new {id= item.BrandId})" type="button" class="btn btn-danger">Delete</a>
                        </div>

                    </td>

                </tr>
            }


        </tbody>
    </table>
</section>


