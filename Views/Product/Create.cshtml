@{
    Layout = "_AdminLayout";
}
@model HairCareStore.Models.Product;

<section class="CreateProduct">
    <h3 class="">Create new product</h3>
    <form class="row g-3" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12">
            <label asp-for="Name" for="inputName" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="inputName" placeholder="">
        </div>
        <div class="col-12">
            <label asp-for="Description" for="inputDescription" class="form-label">Description</label>
            <textarea asp-for="Description" id="inputDescription" class=" form-control" aria-label="With textarea"></textarea>
        </div>
        
        
        <div class="col-md-6">
            <label for="inputBrand" class="form-label">Brand</label>
            <select asp-for="BrandId" name="BrandId" id="inputBrand" class="form-select">
                <option value="" selected>--Choose Brand--</option>
                @foreach (var item in (List<SelectListItem>)ViewBag.Brand)
                {
                    <option value="@item.Value">@item.Text</option>
                }

            </select>
        </div>
        <div class="col-md-6">
            <label for="inputCategory" class="form-label">Type</label>
            <select asp-for="CategoryId" name="CategoryId" id="inputCategory" class="form-select">
                <option value="" selected>--Choose Type--</option>
                @foreach (var item in (List<SelectListItem>)ViewBag.Category)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="Price" for="inputPrice" class="form-label">Price</label>
            <input asp-for="Price" id="inputPrice" class="form-control" type="number" min="0" step="any" />
        </div>
        <div class="col-md-6">
            <label asp-for="Quantity" for="inputQuantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" id="inputQuantity" class="form-control" type="number" min="0" />
        </div>

        <div class="col-6">
            <label asp-for="BarCode" for="inputBarCode" class="form-label">BarCode</label>
            <input asp-for="BarCode" id="inputBarCode" class=" form-control">
        </div>
        <div class="col-md-6">
            <label for="inputAvatar" class="form-label">Image Url</label>
            <input name="ImageFile" id="inputAvatar" type="file" class="form-control" accept="image/*" />
        </div>
       

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</section>
