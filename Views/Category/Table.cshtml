@{
    Layout = "_AdminLayout";
}

@model List<HairCareStore.Models.Category>

<section class="Categorylist List">
    <div class="blank"></div>
    <a href="@Url.Action("Create","Category")" type="button" class="btn btn-primary"> + Add new category</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Avatar</th>
                <th scope="col">Name</th>

                <th scope="col">Function</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.CategoryId</th>
                    <td>
                        <img src="@Url.Content("~/img/Categories/"+@item.Avatar)">
                    </td>
                    <td>@item.Name</td>

                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                            <a href="@Url.Action("Edit","Category",new {id= item.CategoryId})" type="button" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete","Category",new {id= item.CategoryId})" type="button" class="btn btn-danger">Delete</a>
                        </div>

                    </td>

                </tr>
            }


        </tbody>
    </table>
</section>


