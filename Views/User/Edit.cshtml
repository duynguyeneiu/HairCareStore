@{
    Layout = "_AdminLayout";
}
@model HairCareStore.Models.User;

<section class="EditUser">
    <h3 class="">Edit user information</h3>
    <form class="row g-3" asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" name="UserId" value="@Model.UserId" />
        <div class="col-12">
            <label asp-for="Fullname" for="inputName" class="form-label">Name</label>
            <input asp-for="Fullname" type="text" class="form-control" id="inputName" placeholder="">
        </div>
        <div class="col-12">
            <label asp-for="Description" for="inputDescription" class="form-label">Description</label>
            <textarea asp-for="Description" id="inputDescription" class=" form-control" aria-label="With textarea"></textarea>
        </div>
        
        <div class="col-md-6">
            <label asp-for="Phone" for="inputPrice" class="form-label">Phone</label>
            <input asp-for="Phone" id="inputPrice" class="form-control" type="tel" pattern="[0-9]{10}" />
        </div>
        <div class="col-md-6">
            <label asp-for="Email" for="inputQuantity" class="form-label">Email</label>
            <input asp-for="Email" id="inputQuantity" class="form-control" type="email" />
        </div>
        <div class="col-12">
            <label asp-for="Address" for="inputAddress" class="form-label">Address</label>
            <input asp-for="Address" id="inputAddress" class=" form-control">
        </div>
        <div class="col-md-6">
            <label for="inputAvatar" class="form-label">Avatar Url</label>
            <input name="ImageFile" id="inputAvatar" type="file" class="form-control" accept="image/*" />
            <img src="@Url.Content("~/img/Users/"+@Model.Avatar)" />
        </div>



        <div class="col-md-6">
            <label for="inputRole" class="form-label">Role</label>
            <select asp-for="RoleId" id="inputRole" class="form-select" asp-items="@(new SelectList(ViewBag.Role,"Value","Text",Model.RoleId))">

            </select>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>
