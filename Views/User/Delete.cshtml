
@{
    Layout = "_AdminLayout";
}
@model HairCareStore.Models.User

<h2>Delete User</h2>

<p>Are you sure you want to delete this User?</p>
<dl>
    <dt class="col-sm-6">User Name</dt>
    <dd class="col-sm-6">@Model.Fullname</dd>

    <dt class="col-sm-6">Description</dt>
    <dd class="col-sm-6">@Model.Description</dd>

    <dt class="col-sm-6">Email</dt>
    <dd class="col-sm-6">@Model.Email</dd>

    <dt class="col-sm-6">Phone</dt>
    <dd class="col-sm-6">@Model.Phone</dd>

    

    <dt class="col-sm-6">Role</dt>
    <dd class="col-sm-6">
        <img src="@Url.Content("~/img/Users/"+@Model.Avatar)" />
    </dd>

</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>