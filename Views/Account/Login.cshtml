@{
    Layout = "_Layout";
}
<section class="login">
    <h2>Đăng nhập</h2>
    <p>Chào mừng! Vui lòng nhập thông tin chi tiết của bạn.</p>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-sm-12 ">
                <i class="fa-regular fa-envelope"></i>
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <i class="fa-solid fa-lock"></i>
                <input type="password" class="form-control" id="inputPassword" placeholder="Mật khẩu" name="password">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-8">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberCheck">
                    <label class="form-check-label" for="rememberCheck">
                        Ghi nhớ thông tin
                    </label>
                </div>
            </div>

            <div class="col-sm-4">
                <a href="#">Quên mật khẩu?</a>
            </div>
        </div>

        <div class="row mb-3">
            <button type="submit" class="btn btn-primary login-btn mb-3">Đăng nhập</button>
            <button type="submit" class="btn btn-primary active-btn"><i class="fa-solid fa-user-plus me-2"></i>Kích hoạt tài khoản</button>
        </div>
        <div class="row mb-3">
            <label class="">
                Bạn chưa là thành viên? <a href="/Account/Register">Đăng ký ngay!</a>
            </label>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}


